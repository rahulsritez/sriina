<% if (special_product.length > 0) {%>
    <% special_product.forEach((list, index) => { %>
    <% var price =  (list.price)-(list.price/100)*list.discount %>    
<div class="item">
    <div class="products">
      <div class="hot-deal-wrapper">
        <% if(list.image) {%>
            <div class="image"> 
              <% if(/(http(s?)):\/\//i.test(list.image)) {%>
                <a href="<%= list.slug %>/<%= list.id %>"><img src="<%= list.image %>" alt="<%= list.name %>"></a> 
              <% } else { %>
                <a href="<%= list.slug %>/<%= list.id %>"><img src="<%= process.env.IMAGE_URL %><%= list.image %>" alt="<%= list.name %>"></a> 
              <% } %>
            </div>
        <% } else { %>
            <div class="image"> 
                <a href="<%= list.slug %>/<%= list.id %>"><img src="<%= process.env.IMAGE_URL %>404.jpg" alt=""></a>
            </div>
        <% } %>
        <div class="sale-offer-tag"><span><%= list.discount %>%<br>

          off</span></div>
        <!-- <div class="timing-wrapper">
          <div class="box-wrapper">
            <div class="date box"> <span class="key">120</span> <span class="value">DAYS</span> </div>
          </div>
          <div class="box-wrapper">
            <div class="hour box"> <span class="key">20</span> <span class="value">HRS</span> </div>
          </div>
          <div class="box-wrapper">
            <div class="minutes box"> <span class="key">36</span> <span class="value">MINS</span> </div>
          </div>
          <div class="box-wrapper hidden-md">
            <div class="seconds box"> <span class="key">60</span> <span class="value">SEC</span> </div>
          </div>
        </div> -->
      </div>
      <!-- /.hot-deal-wrapper -->
      
      <div class="product-info text-left m-t-20">
        <h3 class="name"><a href="<%= list.slug %>/<%= list.id %>"><%= list.name.substring(0, 60) %></a></h3>
        <div class="rating rateit-small"></div>
        <div class="product-price"> <span class="price"> ₹ <%= price.toFixed(2).replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,") %>  </span> <span class="price-before-discount">₹ <%= (list.price) %></span> <span><%= list.discount %>% off</span> </div>
      </div>
      
      <div class="cart clearfix animate-effect">
        <div class="">
            <% if( maxplan[0].MaxPlanPrice >= list.price ) { %>
                <div class="on_rent"><a href="membership?productId=<%= list.id %>">On Rent</a></div>
            <% } %>
            <div class="add_cart">
                <a href="<%= list.slug %>/<%= list.id %>"><i class="fa fa-shopping-cart"></i> View Product</a>
            </div>
        </div>
      </div>
      
    </div>
  </div>
  <% }) %>
    <% } else { %>
        <p class="text-center">Special product not available</p>
<% } %>
