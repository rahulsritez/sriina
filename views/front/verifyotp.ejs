        <script src="assets/js/wow.min.js"></script>
        <script src="assets/js/scripts.js"></script>
        
        <script>
            function validateVerifyOTP(){
                var flag = false;
                var otp = $("#otp").val();
                var otpReg = /^[0-9]*$/;

                if(otp ===""){
                    $("#error_otp").html('<label class="text-danger">OTP cannot be empty.</label>');  
                    flag = true; 
                } else if(!otpReg.test(otp)) {
                    $("#error_otp").html('<label class="text-danger">Invalid OTP</label>');
                    flag = true;
                } else if(otp.length!=6){
                    $("#error_otp").html('<label class="text-danger">Invalid OTP length</label>');
                    flag = true;
                } else {
                    $("#error_otp").html('');
                }

                if(flag){
                    return false;
                }
            }

            function isNumberKey(evt){
                var charCode = (evt.which) ? evt.which : evt.keyCode
                if (charCode > 31 && (charCode < 48 || charCode > 57))
                    return false;
                return true;
            }

            $(window).bind("load", function () {
                $(".show-theme-options").delay(2000).trigger("click");
            });
        </script>
