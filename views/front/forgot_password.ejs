    <body class="cnt-home">
        <header class="header-style-1">
            <%- include("top_bar") -%>
            <%- include("search") -%>
            <%- include("navigation") -%>
        </header>

        <div class="breadcrumb">
            <div class="container">
                <div class="breadcrumb-inner">
                    <ul class="list-inline list-unstyled">
                        <li><a href="/">Home</a></li>
                        <li class="active">Forgot Password</li>
                    </ul>
                </div>
                <!-- /.breadcrumb-inner -->
            </div>
            <!-- /.container -->
        </div>
        <!-- /.breadcrumb -->

        <div class="body-content">
            <div class="container">
                <div class="sign-in-page">
                    <div class="row">
                        <!-- Sign-in -->
                        <div class="col-md-12 col-sm-12 sign-in">
                            <% if(message.length > 0) { %>
                                <div class="alert alert-danger alert-dismissible show" role="alert">
                                  <%= message %>
                                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                            <% } %>
                            <form action="/userforgotpwd" method="post" class="register-form outer-top-xs" enctype="application/x-www-form-urlencoded" id="register-form" onsubmit="return validateForgotPwd()" autocomplete="off">    
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="form-group">
                                    <label class="info-title" for="exampleInputEmailLogin">Email Address <span>*</span></label>
                                    <input type="email" name="username" class="form-control unicase-form-control text-input" id="email" placeholder="Enter your email Id" maxlength="50" />
                                    <small id="error_email"></small>
                                </div>
                                <button type="submit" class="btn-upper btn btn-primary checkout-page-button">Forgot Password</button>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        <%- include ("../front/book_footer") %>
        <script src="assets/js/jquery-1.11.1.min.js"></script>
        <script src="assets/js/bootstrap.min.js"></script>
        <script src="assets/js/bootstrap-hover-dropdown.min.js"></script>
        <script src="assets/js/owl.carousel.min.js"></script>
