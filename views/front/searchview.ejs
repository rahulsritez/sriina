      <script>
   function AddReadMore() {
    var charLimit = 800; // Character limit
    var readMoreTxt = " ... Read more";
    var readLessTxt = " Read less";

    $(".addReadMore").each(function () {
        var fullHtml = $(this).html(); // Preserve HTML structure
        var tempDiv = $("<div>").html(fullHtml); // Create a temporary div
        var textOnly = tempDiv.text().trim(); // Get plain text without HTML tags

        if (textOnly.length > charLimit) {
            var firstSet = textOnly.substring(0, charLimit);
            var secdHalf = fullHtml.substring(firstSet.length); // Keep HTML structure

            var strtoadd = `<span class="firstSec">${firstSet}</span>
                            <span class="SecSec" style="display:none;">${secdHalf}</span>
                            <span class="readMore" title="Click to Show More">${readMoreTxt}</span>
                            <span class="readLess" title="Click to Show Less" style="display:none;">${readLessTxt}</span>`;

            $(this).html(strtoadd);
        }
    });

    // Toggle Read More / Read Less
    $(document).on("click", ".readMore", function () {
        $(this).parent().find(".SecSec").show(); // Show full text
        $(this).hide(); // Hide Read More
        $(this).next(".readLess").show(); // Show Read Less
    });

    $(document).on("click", ".readLess", function () {
        $(this).parent().find(".SecSec").hide(); // Hide full text
        $(this).prev(".readMore").show(); // Show Read More
        $(this).hide(); // Hide Read Less
    });
}

// Run function after page load
$(document).ready(function () {
    AddReadMore();
});


      </script>
