<script>
  function isNumber(evt) {
    evt = (evt) ? evt : window.event;
    var charCode = (evt.which) ? evt.which : evt.keyCode;
    if (charCode > 31 && (charCode < 48 || charCode > 57)) {
        return false;
    }
    return true;
}

  function validateForm() {
  var flag = false;
  var exampleInputName    = $("#exampleInputName").val();
  var exampleInputEmail1  = $("#exampleInputEmail1").val();
  var exampleInputmobile  = $("#exampleInputmobile").val();
  var exampleInputsubject = $("#exampleInputsubject").val();
  var message             = $("#message").val();
    
  var name_len    = $("#exampleInputName").val().length;
  var message_len = $("#message").val().length;

  var minLength = 3;
  var maxLength = 50;
  var msg_len_min = 10;
  var msg_len_max = 100;
  var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;

  if($("#exampleInputName").val().search(/\w/)< 0){
    $("#error_name").html("<label class='text-danger'>Please enter your name.</label>");
    flag = true;
  } else if(name_len < minLength){
    $("#error_name").html('<label class="text-danger">Length is short, minimum '+minLength+' characters required.</label>');
    flag = true;
  } else if(name_len > maxLength){
    $("#error_name").html('<label class="text-danger">Length is not valid, maximum '+maxLength+' characters allowed.</label>');
    flag = true;
  } else {
    $("#error_name").html('');
  }

  if( $("#exampleInputEmail1").val().search(/\w/)< 0 ){
    $("#error_email").html('<label class="text-danger">Please enter your email address.</label>');
    flag = true;
  } else if(!emailReg.test(exampleInputEmail1)) {
    $("#error_email").html('<label class="text-danger">Enter a valid email address</label>');
    flag = true;
  } else {
    $("#error_email").html('');
  }


    if(exampleInputmobile.search(/\w/)< 0) {
      $("#error_phone").html('<label class="text-danger">Please enter your mobile number.</label>');
      flag = true;
    } else if($("#exampleInputmobile").val().length!=10){
      $("#error_phone").html('<label class="text-danger">Please enter valid phone number.</label>');
      flag = true;
    } else {
      $("#error_phone").html('');
    }
 

  if($("#message").val().search(/\w/)< 0) {
      $("#error_message").html('<label class="text-danger">Please enter your message.</label>');
      flag = true;
  } else if(message_len < msg_len_min){
    $("#error_message").html('<label class="text-danger">Length is short, minimum '+msg_len_min+' characters required.</label>');
    flag = true;
  } else if(message_len > msg_len_max){
    $("#error_message").html('<label class="text-danger">Length is not valid, maximum '+msg_len_max+' characters allowed.</label>');
    flag = true;
  } else {
    $("#error_message").html('');
  }


  if(flag){
        return false;
    }
}
</script>
