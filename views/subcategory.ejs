<!--<html lang="en">-->

<%- include header %>
<%- include ../common/leftsidebar %>
<!-- Main component for a primary marketing message or call to action -->
<div id="page-content-wrapper">
    <div id="page-content" style="min-height: 1077px;">

        <div class="container">

            <div id="page-title">
                <h2>Product SubCategory

                    <a href="#" class="btn btn-block btn-primary" data-target="#myModal" data-toggle="modal"
                       style="width:auto;float:right;">Add Sub Category</a>
                </h2>

            </div>


            <div class="panel">
                <div class="panel-body">


                    <div class="example-box-wrapper">
                        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered"
                               id="datatable-example">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>Action</th>

                            </tr>
                            </thead>
                            <tbody>
                       <% for(var i=0; i < subcategorylist.length; i++){ %>
                            <tr class="gradeX">
                                <td><%= subcategorylist[i].name %></td>
                                <td><%= subcategorylist[i].categoryname %></td>
                                <td><img height="100" src="<%= process.env.IMAGE_URL %><%= subcategorylist[i].image %>" ></td>
                                <td><% if(subcategorylist[i].status==1){ %>Active<% } else{ %>Inactive<% } %></td>
                                <td>
                                    <a class="editsubcategory" id="<%= subcategorylist[i].id %>" data-target="#myModaledit" data-toggle="modal"><i
                                                class="glyph-icon icon-pencil"
                                                style="padding-left: 33px;"></i></a>
                                    <a
                                       class="delete_subactegory" id="<%= subcategorylist[i].id %>"><i class="glyph-icon icon-trash"
                                                         style="padding-left: 33px;"></i></a>
                                </td>
                            </tr>
                       <% }%>
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade"
     id="myModal"
     tabindex="-1"
     role="dialog"
     aria-hidden="true">
    <div
            class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add SubCategory</h4>
            </div>
            <!--end modal-header-->
            <form action="/addsubcategory" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="example-box-wrapper">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="control-label label-margin">SubCategory Name</label>

                                <input type="text" class="form-control" id="" placeholder="SubCategory Name" name="SubCategory_Name" required>

                            </div>

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Category Name</label>
                                <select class="form-control" name="Category_Nameid" required>
                                    <option value="">Select</option>
                                    <% for(var i=0; i < categorylist.length; i++){ %>
                                    <option value="<%= categorylist[i].id %>"><%= categorylist[i].name %></option>
                                    <% }%>
                                </select>
                            </div>

                        </div>



                        <div class="form-group">

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Image</label>
                                <input type="file" class="form-control" id="" placeholder="Image" name="subCategoryimage" required>

                            </div>

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Status</label>

                                <select class="form-control" name="subCategory_Status" required>
                                    <option value="1">Active</option>
                                    <option value="0">Inactive</option>

                                </select>

                            </div>

                        </div>



                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>

<div class="modal fade"
     id="myModaledit"
     tabindex="-1"
     role="dialog"
     aria-hidden="true">
    <div
            class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit SubCategory</h4>
            </div>
            <!--end modal-header-->
            <form action="/updatesubcategory" method="post" enctype="multipart/form-data">
                <input type="hidden" id="subcategory_id" name="subcategory_id" value="">
                <div class="modal-body">
                    <div class="example-box-wrapper">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="control-label label-margin">SubCategory Name</label>

                                <input type="text" class="form-control" id="editSubCategory_Name" placeholder="SubCategory Name" name="editSubCategory_Name" required>

                            </div>

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Category Name</label>
                                <select class="form-control"  id="editCategory_Nameid" name="editCategory_Nameid" required>
                                    <option value="">Select</option>
                                    <% for(var i=0; i < categorylist.length; i++){ %>
                                    <option value="<%= categorylist[i].id %>"><%= categorylist[i].name %></option>
                                    <% }%>
                                </select>
                            </div>

                        </div>



                        <div class="form-group">

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Image</label>
                                <input type="file" class="form-control" id="editsubCategoryimage" placeholder="Image" name="editsubCategoryimage" >

                            </div>

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Status</label>

                                <select class="form-control" id="editsubCategory_Status" name="editsubCategory_Status" required>
                                    <option value="1">Active</option>
                                    <option value="0">Inactive</option>

                                </select>

                            </div>

                        </div>



                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>

<%- include footer %>
</body>
</html>