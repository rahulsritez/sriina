<!--<html lang="en">-->

<%- include header %>
<%- include ../common/leftsidebar %>
<!-- Main component for a primary marketing message or call to action -->
<div id="page-content-wrapper rer">
    <div id="page-content" style="min-height: 1077px;">

        <div class="container">

            <div id="page-title">
                <h2>States

                    <a href="#" class="btn btn-block btn-primary" data-target="#myModal" data-toggle="modal"
                       style="width:auto;float:right;">Add States</a>
                </h2>

            </div>

            <div class="panel">
                <div class="panel-body">


                    <div class="example-box-wrapper">
                        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered"
                               id="datatable-example">
                            <thead>
                            <tr>
                                <th>STATE</th>
                                <th>CODE</th>
                                <th>COUNTRY</th>
                                <th>STATUS</th>
                                <th>ACTION</th>

                            </tr>
                            </thead>
                            <tbody>
                       <% for(var i=0; i < statelist.length; i++){ %>
                            <tr class="gradeX">
                                <td><%= statelist[i].name %></td>
                                <td><%= statelist[i].code %></td>
                                <td><%= statelist[i].countryname %></td>
                                <td><% if(statelist[i].status==1){ %>Active<% } else{ %>Inactive<% } %></td>
                                <td>
                                    <a class="editstate" id="<%= statelist[i].id %>" data-target="#myModaledit" data-toggle="modal"><i
                                                class="glyph-icon icon-pencil"
                                                style="padding-left: 33px;"></i></a>
                                    <a
                                      class="del_state " id="<%= statelist[i].id %>"><i class="glyph-icon icon-trash"
                                                         style="padding-left: 33px;"></i></a>
                                </td>
                            </tr>
                       <% }%>
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade"
     id="myModal"
     tabindex="-1"
     role="dialog"
     aria-hidden="true">
    <div
            class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add State</h4>
            </div>
            <!--end modal-header-->
            <form action="/addstate" method="post">
                <div class="modal-body">
                    <div class="example-box-wrapper">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="control-label label-margin">State</label>

                                <input type="text" class="form-control" id="" placeholder="State" name="State" required>

                            </div>

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Code</label>

                                <input type="text" class="form-control" id="" placeholder="State Code" name="stateCode" required>

                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="control-label label-margin">Country</label>

                                <select class="form-control" name="country" required>
                                    <option value="">Select</option>
                                <% for(var i=0; i < countrylist.length; i++){ %>
                                    <option value="<%= countrylist[i].id %>"><%= countrylist[i].name %></option>
                                <% }%>
                                </select>
                            </div>

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Status</label>

                                <select class="form-control" name="Status" required>
                                    <option value="1">Active</option>
                                    <option value="0">Inactive</option>

                                </select>

                            </div>

                        </div>




                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>

<div class="modal fade"
     id="myModaledit"
     tabindex="-1"
     role="dialog"
     aria-hidden="true">
    <div
            class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit State</h4>
            </div>
            <!--end modal-header-->
            <form action="/updatestate" method="post">
                <input type="hidden" id="edit_state_id" name="edit_state_id" value="">
                <div class="modal-body">
                    <div class="example-box-wrapper">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="control-label label-margin">State</label>

                                <input type="text" class="form-control" id="edit_State" placeholder="State" name="edit_State" required>

                            </div>

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Code</label>

                                <input type="text" class="form-control" id="edit_stateCode" placeholder="State Code" name="edit_stateCode" required>

                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="control-label label-margin">Country</label>

                                <select class="form-control" id="edit_stae_country" name="edit_stae_country" required>
                                    <option value="">Select</option>
                                    <% for(var i=0; i < countrylist.length; i++){ %>
                                    <option value="<%= countrylist[i].id %>"><%= countrylist[i].name %></option>
                                    <% }%>
                                </select>
                            </div>

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Status</label>

                                <select class="form-control" id="edit_state_Status" name="edit_state_Status" required>
                                    <option value="1">Active</option>
                                    <option value="0">Inactive</option>

                                </select>

                            </div>

                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>

<%- include footer %>
</body>
</html>