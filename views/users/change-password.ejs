    <!-- Dashboard CSS -->
    <style>
        :root {
            --primary-color: #3f51b5;
            --secondary-color: #f5f5f5;
            --text-color: #333;
            --light-gray: #f8f9fa;
            --border-color: #e0e0e0;
            --success: #1cc88a;
            --warning: #f6c23e;
            --info: #36b9cc;
            --primary: #4e73df;
            --danger: #e74a3b;
            --form-border-radius: 8px;
            --transition: all 0.3s ease;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fa;
            color: var(--text-color);
        }
        
        .dashboard-wrapper {
            padding: 2rem 0 4rem;
        }
        
        /* Ensure consistent card heights */
        .summary-card {
            height: 100%;
        }
        
        .sidebar {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
            padding: 0;
            overflow: hidden;
        }
        
        .user-panel {
            padding: 20px;
            text-align: center;
            background: var(--primary-color);
            color: white;
        }
        
        .user-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            border: 3px solid rgba(255,255,255,0.2);
            margin: 0 auto 10px;
            display: block;
            object-fit: cover;
        }
        
        .user-name {
            font-size: 18px;
            font-weight: 600;
            margin: 10px 0 5px;
        }
        
        .user-email {
            font-size: 13px;
            opacity: 0.8;
        }
        
        .dashboard-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .dashboard-menu li {
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }
        
        .dashboard-menu li:last-child {
            border-bottom: none;
        }
        
        .dashboard-menu li a {
            display: block;
            padding: 15px 20px;
            color: #555;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        .dashboard-menu li a i {
            width: 25px;
            margin-right: 10px;
            text-align: center;
        }
        
        .dashboard-menu li a:hover,
        .dashboard-menu li.active a {
            background: rgba(63, 81, 181, 0.1);
            color: var(--primary-color);
            padding-left: 25px;
        }
        
        .dashboard-menu li.active a {
            border-left: 3px solid var(--primary-color);
            font-weight: 500;
        }
        
        .dashboard-content {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
            padding: 25px;
        }
        
        .page-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--border-color);
        }

        @media (max-width: 991px) {
            .sidebar {
                margin-bottom: 30px;
            }
        }
        
        /* Form Styling */
        .form-control {
            border-radius: var(--form-border-radius) 0 0 var(--form-border-radius) !important;
            padding: 0.75rem 1rem;
            border: 1px solid #ced4da;
            transition: var(--transition);
            height: auto;
            line-height: 1.5;
        }
        
        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(63, 81, 181, 0.15);
        }
        
        .form-label {
            color: #4a4a4a;
            margin-bottom: 0.5rem;
        }
        
        .invalid-feedback {
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }
        
        .btn {
            border-radius: var(--form-border-radius);
            padding: 0.6rem 1.5rem;
            font-weight: 500;
            transition: var(--transition);
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .btn-primary:hover {
            background-color: #3448c7;
            border-color: #2e3db0;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(63, 81, 181, 0.2);
        }
        
        .btn-outline-secondary:hover {
            background-color: #f8f9fa;
            transform: translateY(-2px);
        }
        
        .input-group-text {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            border-left: none;
            cursor: pointer;
            transition: var(--transition);
            padding: 0.75rem 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 45px;
        }
        
        .input-group .form-control {
            position: relative;
            flex: 1 1 auto;
            width: 1%;
            min-width: 0;
            margin-bottom: 0;
        }
        
        .input-group {
            position: relative;
            display: flex;
            flex-wrap: nowrap;
            align-items: stretch;
            width: 100%;
        }
        
        .input-group > .form-control {
            position: relative;
            flex: 1 1 auto;
            width: 1%;
            min-width: 0;
            margin-bottom: 0;
        }
        
        .input-group .form-control:focus + .input-group-text {
            border-color: var(--primary-color);
        }
        
        .toggle-password {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            border-left: none;
            z-index: 2;
            border-radius: 0px 10px 10px 0px;
        }
        
        .toggle-password:hover {
            background-color: #e9ecef;
        }
        
        .form-text {
            font-size: 0.8rem;
        }
        
        .was-validated .form-control:invalid, 
        .form-control.is-invalid {
            border-color: var(--danger);
            padding-right: calc(1.5em + 0.75rem);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23e74a3b'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23e74a3b' stroke='none'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
        
        .was-validated .form-control:valid,
        .form-control.is-valid {
            border-color: var(--success);
            padding-right: calc(1.5em + 0.75rem);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%231cc88a' d='M2.3 6.73L.6 4.53c-.4-1.04.46-1.4 1.1-.8l1.1 1.4 3.4-3.8c.6-.63 1.6-.27 1.2.7l-4 4.6c-.43.5-.8.4-1.1.1z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
        
        @media (max-width: 767px) {
            .dashboard-content {
                padding: 15px;
            }
            
            .page-title {
                font-size: 20px;
            }
            
            .btn {
                width: 100%;
                margin-bottom: 10px;
            }
            
            .d-md-flex .btn:not(:last-child) {
                margin-right: 0;
            }
        }
    </style>
</head>
<body class="cnt-home">
    <!-- Header -->
    <header class="header-style-1">
        <%- include('../front/top_bar') -%> 
        <%- include('../front/search') -%> 
        <%- include('../front/navigation') -%>
    </header>

    <div class="breadcrumb">
        <div class="container">
            <div class="breadcrumb-inner">
                <ul class="list-inline list-unstyled">
                    <li><a href="/">Home</a></li>
                    <li class="active">My Profile</li>
                </ul>
            </div>
            <!-- /.breadcrumb-inner -->
        </div>
        <!-- /.container -->
    </div>
    <!-- /.breadcrumb -->

    <!-- Main Content -->
    <div class="body-content">
        <div class="container dashboard-wrapper">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-lg-3 col-md-4">
                    <div class="sidebar">
                        <div class="user-panel">
                            <img src="<%= baseURL %>assets/images/default-avatar.png" alt="User" class="user-avatar">
                            <h4 class="user-name"><%= user.name || 'User' %></h4>
                            <div class="user-email"><%= user.email %></div>
                        </div>
                        <ul class="dashboard-menu">
                            <li>
                                <a href="/myaccount">
                                    <i class="fas fa-tachometer-alt"></i> Dashboard
                                </a>
                            </li>
                            <li>
                                <a href="/profile">
                                    <i class="fas fa-user"></i> Billing Details
                                </a>
                            </li>
                            <li class="active">
                                <a href="/change-password">
                                    <i class="fas fa-lock"></i> Change Password
                                </a>
                            </li>
                            <li>
                                <a href="/userlogout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <!-- Main Content Area -->
                <div class="col-lg-9 col-md-8">
                    <div class="dashboard-content">
                        <h2 class="page-title">Change Password</h2>
                        
                        <div class="card">
                            <% if(message.length > 0) {%>
                                <div class="alert alert-success alert-dismissible show" role="alert">
                                    <%= message %>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            <% } %>
                            <div class="card-body">
                                <form method="post" action="/update-password" onsubmit="return validatePassword()" class="needs-validation" novalidate>
                                    <input type="hidden" name="_csrf" value="<%= csrf %>">
                                    
                                    <div class="form-group mb-4">
                                        <label for="curr_password" class="form-label fw-medium">Current Password <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <input type="password" 
                                                   class="form-control form-control-lg" 
                                                   id="curr_password" 
                                                   name="curr_password" 
                                                   placeholder="Enter your current password" 
                                                   required>
                                            <span class="input-group-text toggle-password" data-target="#curr_password">
                                                <i class="far fa-eye"></i>
                                            </span>
                                        </div>
                                        <div class="form-text text-muted small">Enter your current account password</div>
                                        <div id="curr_password_err" class="invalid-feedback d-block"></div>
                                    </div>

                                    <div class="form-group mb-4">
                                        <label for="n_password" class="form-label fw-medium">New Password <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <input type="password" 
                                                   class="form-control form-control-lg" 
                                                   id="n_password" 
                                                   name="n_password" 
                                                   placeholder="Create a new password" 
                                                   minlength="8"
                                                   required
                                                   pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$">
                                            <span class="input-group-text toggle-password" data-target="#n_password">
                                                <i class="far fa-eye"></i>
                                            </span>
                                        </div>
                                        <div class="form-text text-muted small">
                                            Password must contain at least 8 characters, including uppercase, lowercase, numbers & special characters
                                        </div>
                                        <div id="n_password_err" class="invalid-feedback d-block"></div>
                                    </div>

                                    <div class="form-group mb-4">
                                        <label for="c_password" class="form-label fw-medium">Confirm New Password <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <input type="password" 
                                                   class="form-control form-control-lg" 
                                                   id="c_password" 
                                                   placeholder="Confirm your new password" 
                                                   required>
                                            <span class="input-group-text toggle-password" data-target="#c_password">   
                                                <i class="far fa-eye"></i>
                                            </span>
                                        </div>
                                        <div id="c_password_err" class="invalid-feedback d-block"></div>
                                    </div>

                                    <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-5">
                                        <button type="submit" class="btn btn-primary btn-lg px-4 me-md-2">
                                            <i class="fas fa-save me-2"></i> Update Password
                                        </button>
                                        <button type="reset" class="btn btn-outline-secondary btn-lg px-4">
                                            <i class="fas fa-undo me-2"></i> Reset
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../front/book_footer') -%>

    <!-- JavaScripts -->
    <script src="<%= baseURL %>assets/js/jquery-1.11.1.min.js"></script>
    <script src="<%= baseURL %>assets/js/bootstrap.min.js"></script>
    <script src="<%= baseURL %>assets/js/bootstrap-hover-dropdown.min.js"></script>
    <script src="<%= baseURL %>assets/js/owl.carousel.min.js"></script>
    <script src="<%= baseURL %>assets/js/echo.min.js"></script>
    <script src="<%= baseURL %>assets/js/jquery.easing-1.3.min.js"></script>
    <script src="<%= baseURL %>assets/js/bootstrap-slider.min.js"></script>
    <script src="<%= baseURL %>assets/js/jquery.rateit.min.js"></script>
    <script src="<%= baseURL %>assets/js/lightbox.min.js"></script>
    <script src="<%= baseURL %>assets/js/bootstrap-select.min.js"></script>
    <script src="<%= baseURL %>assets/js/wow.min.js"></script>
    <script src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <script src="<%= baseURL %>assets/js/scripts.js"></script>
    <script type="text/javascript">
        // Toggle password visibility
        document.querySelectorAll('.toggle-password').forEach(function(button) {
            button.addEventListener('click', function() {
                const targetId = this.getAttribute('data-target');
                const input = document.querySelector(targetId);
                const icon = this.querySelector('i');
                
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        });
        
        // Real-time password validation
        document.getElementById('n_password').addEventListener('input', function() {
            const password = this.value;
            const passwordErr = document.getElementById('n_password_err');
            
            if (password.length > 0 && password.length < 8) {
                passwordErr.textContent = 'Password must be at least 8 characters long';
                passwordErr.style.display = 'block';
                this.classList.add('is-invalid');
                return;
            }
            
            if (!/(?=.*[a-z])/.test(password)) {
                passwordErr.textContent = 'Password must contain at least one lowercase letter';
                passwordErr.style.display = 'block';
                this.classList.add('is-invalid');
                return;
            }
            
            if (!/(?=.*[A-Z])/.test(password)) {
                passwordErr.textContent = 'Password must contain at least one uppercase letter';
                passwordErr.style.display = 'block';
                this.classList.add('is-invalid');
                return;
            }
            
            if (!/(?=.*\d)/.test(password)) {
                passwordErr.textContent = 'Password must contain at least one number';
                passwordErr.style.display = 'block';
                this.classList.add('is-invalid');
                return;
            }
            
            if (!/(?=.*[@$!%*?&])/.test(password)) {
                passwordErr.textContent = 'Password must contain at least one special character (@$!%*?&)';
                passwordErr.style.display = 'block';
                this.classList.add('is-invalid');
                return;
            }
            
            passwordErr.style.display = 'none';
            this.classList.remove('is-invalid');
            this.classList.add('is-valid');
        });
        
        // Confirm password validation
        document.getElementById('c_password').addEventListener('input', function() {
            const confirmPassword = this.value;
            const password = document.getElementById('n_password').value;
            const confirmErr = document.getElementById('c_password_err');
            
            if (confirmPassword !== password) {
                confirmErr.textContent = 'Passwords do not match';
                confirmErr.style.display = 'block';
                this.classList.add('is-invalid');
            } else {
                confirmErr.style.display = 'none';
                this.classList.remove('is-invalid');
                this.classList.add('is-valid');
            }
        });
        function validatePassword() {
            var is_valid = true;
            var curr_pass = $("#curr_password").val().trim();
            var new_pass = $("#n_password").val().trim();
            var c_pass = $("#c_password").val().trim();
            $(".err_msg").html('');
            if(curr_pass === "") {
                $("#curr_password_err").html('<span class="text-danger">Provide your current password.</span>');
                is_valid = false;
            }
            if(new_pass.length < 6) {
                $("#n_password_err").html('<span class="text-danger">Password lenght should be 6 character long.</span>');
                is_valid = false;
            }
            if(new_pass !== c_pass) {
                $("#c_password_err").html('<span class="text-danger">Confirm password mismatch.</span>');
                is_valid = false;
            }
            return is_valid;
        }
    </script>
</body>
