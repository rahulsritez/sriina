    <body class="cnt-home">
        <header class="header-style-1">
            <%- include('../front/top_bar') -%> <%- include('../front/search') -%> <%- include('../front/navigation') -%>
        </header>

<div class="breadcrumb">
	<div class="container">
		<div class="breadcrumb-inner">
			<ul class="list-inline list-unstyled">
				<li><a href="/">Home</a></li>
				<li class='active'>View Order</li>
			</ul>
		</div><!-- /.breadcrumb-inner -->
	</div><!-- /.container -->
</div><!-- /.breadcrumb -->

<div class="body-content">
	<div class="container">
		<div class="checkout-box faq-page">
			<div class="row">
				<div class="col-md-12">
					<h2 class="heading-title">Welcome <%= user.name %> <a onclick="goBack()" class="btn btn-default" style="float: right;">Back</a></h2>
				</div>
				<div class="col-md-12">
                    <div class="alert alert-warning" role="alert">
                        <h4>Important Message</h4>
                        Cancelling items in this order may cause you to lose promotional offer and cashbacks on undispatched item in this and/or you may not be able to cancel some of the items in this order
                      </div>
                    <div class="alert alert-danger" role="alert">Are you sure you want to cancel this order?</div>
                    <form class="cancleItem" id="cancleItem" method="post" action="/cancle_item_success" onsubmit="return validateLogin()">
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                        <input type="hidden" name="cancelledId" value="<%=requestId.reference%>">
                        <input type="hidden" name="useCase" value="<%=useCase%>">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Reason for cancellation</label>
                            <div class="col-sm-8">
                                <select name="reson" class="form-control" id="reson">
                                    <option value="">-Select Cancellation Reason-</option>
                                    <option value="1">Order Created by Mistake</option>
                                    <option value="2">Item(s) Would Not Arrive on Time</option>
                                    <option value="3">Shipping Cost Too High</option>
                                    <option value="4">Found Cheaper Somewhere Else</option>
                                    <option value="5">Need to Change Shipping Address</option>
                                    <option value="6">Need to Change Shipping Spped</option>
                                    <option value="7">Need to Change Billing Address</option>
                                    <option value="8">Need to Change Payment Method</option>
                                    <option value="9">Other</option>
                                </select>
                                <span id="reson_error"></span>
                            </div>
                            <div class="col-md-2"><input type="submit" value="Cancel Order" class="btn btn-primary"> </div>
                          </div>
                    </form>
				</div>
			</div><!-- /.row -->
		</div><!-- /.checkout-box -->
	</div><!-- /.container -->
</div><!-- /.body-content -->
<%- include('../front/book_footer') -%>
