                          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <% } %>
                        
                        <!-- Sign-in -->
                        <div class="col-md-6 col-sm-6 sign-in">
                            <h4 class="">Sign in</h4>
                            <!-- <div class="social-sign-in outer-top-xs">
                                <a href="#" class="facebook-sign-in"><i class="fa fa-facebook"></i> Sign In with Facebook</a>
                                <a href="#" class="twitter-sign-in"><i class="fa fa-twitter"></i> Sign In with Twitter</a>
                            </div> -->
                            <form action="/userlogin" method="post" class="register-form outer-top-xs" id="form" onsubmit="return validateLogin()">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="form-group">
                                    <label class="info-title" for="exampleInputEmailLogin">Email Address <span>*</span></label>
                                    <input type="email" name="username" class="form-control unicase-form-control text-input" id="email" />
                                    <small id="login_error_email"></small>
                                    
                                </div>
                                <div class="form-group">
                                    <label class="info-title" for="exampleInputPasswordLogin">Password <span>*</span></label>
                                    <input type="password" name="password" class="form-control unicase-form-control text-input" id="pwd" />
                                    <small id="login_error_pwd"></small>
                                </div>
                                <div class="radio outer-xs">
                                    <label> <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2" />Remember me! </label>
                                    <a href="/forgot-password" class="forgot-password pull-right">Forgot Password</a>
                                </div>
                                <button type="submit" class="btn-upper btn btn-primary checkout-page-button">Login</button>
                            </form>
                        </div>
                        <!-- Sign-in -->

                        <!-- create a new account -->
                        <div class="col-md-6 col-sm-6 create-new-account">
                            <h4 class="checkout-subtitle">Create a new account</h4>
                            <form action="/registerusers" method="post" class="register-form outer-top-xs" enctype="application/x-www-form-urlencoded" id="register-form" onsubmit="return validateRegister()" autocomplete="off">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="form-group success">
                                    <label class="info-title" for="exampleInputEmail2">Email Address <span>*</span></label>
                                    <input type="email" name="useremail" placeholder="Please enter Email" class="form-control success unicase-form-control text-input" id="userEmail" />
                                    <!-- <i class="fa fa-check-circle"></i>
                                    <i class="fa fa-exclamation-circle"></i> -->
                                    <small id="error_email"></small>
                                </div>
                                <div class="form-group error">
                                    <label class="info-title" for="exampleInputEmail1">Name <span>*</span></label>
                                    <input type="text" name="username" placeholder="Please enter name" class="form-control error unicase-form-control text-input" id="username" />
                                    <i class="fa fa-check-circle"></i>
                                    <i class="fa fa-exclamation-circle"></i>
                                    <small id="error_name"></small>
                                </div>
                                <div class="form-group">
                                    <label class="info-title" for="exampleInputEmail1">Phone Number <span>*</span></label>
                                    <input type="text" name="userphone" placeholder="Please enter mobile phone" class="form-control unicase-form-control text-input" id="userphone" minlength="10" maxlength="10" onkeypress="return isNumberKey(event)" accept="" />
                                    <i class="fa fa-check-circle"></i>
                                    <i class="fa fa-exclamation-circle"></i>
                                    <small id="error_phone"></small>
                                </div>
                                <div class="form-group">
                                    <label class="info-title" for="exampleInputEmail1">Password <span>*</span></label>
                                    <input type="password" name="password" placeholder="Please enter password" class="form-control unicase-form-control text-input" id="password" />
                                    <i class="fa fa-check-circle"></i>
                                    <i class="fa fa-exclamation-circle"></i>
                                    <small id="error_pwd"></small>
                                </div>
                                <!-- <input type="hidden" name="login" value="true"> -->
                                <button type="submit" class="btn-upper btn btn-primary checkout-page-button">Sign Up</button>
                            </form>
                        </div>
                    </div>
