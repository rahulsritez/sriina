        <script>
            function getURLParameter(name) {
            let urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(name);
            }
            let product_id = getURLParameter('product_id');
            if(product_id)
            {
                let product_id = getURLParameter('product_id');
                let name = getURLParameter('name');
                let quantity = getURLParameter('quantity');
                let price = getURLParameter('price');
                let image = getURLParameter('image');

                var signinFormCart = document.getElementById('cart-detail');
                if (signinFormCart.style.display === 'none') {
                        signinFormCart.style.display = 'block';
                        const cartItemsContainer = document.getElementById('cart-items');
                        cartItemsContainer.innerHTML = ''; // Clear existing rows
                        const row = document.createElement('tr');
                        row.innerHTML = `
                        <td class="cart-description item">
                            <img src="${image}" alt="${name}" style="width: 100px; height: 100px;">
                        </td>
                        <td class="cart-product-name item">${name}</td>
                        <td class="cart-qty item">${quantity}</td>
                        <td class="cart-sub-total item">₹${price}</td>
                        <td class="cart-total last-item">₹${price}</td>
                        `;

                        // Append the row to the table
                        cartItemsContainer.appendChild(row);
                } 
                else {
                        signinFormCart.style.display = 'none';
                }
            }
            function validateRegister(){
                var flag = false;
                var userEmailValue = $("#userEmail").val();
                var usernameValue = $("#username").val().trim();
                var userphoneValue = $("#userphone").val();
                var passwordValue = $("#password").val();
                
                var username_len = $("#username").val().length;
                var password_len = $("#password").val().length;
                var minLength = 3;
                var maxLength = 100;
                var pwdLenght = 6;
                var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;

                if(userEmailValue ===""){
                    $("#error_email").html('Email Id cannot be empty.');  
                    flag = true; 
                } else if(!emailReg.test(userEmailValue)) {
                    $("#error_email").html('Invalid email address.');
                    flag = true;
                } else {
                    $("#error_email").html('');
                }

                if(usernameValue ==="" || usernameValue.search(/\w/)< 0){ 
                    $("#error_name").html('Name cannot be empty.'); 
                    flag = true;  
                } else if(username_len < minLength){
                    $("#error_name").html('Length is short, minimum '+minLength+' characters required.');
                    flag = true;
                } else if(username_len > maxLength){
                    $("#error_name").html('Length is not valid, maximum '+maxLength+' characters allowed.');
                    flag = true;
                } else {
                    $("#error_name").html('');
                }

                if(userphoneValue ==="" || userphoneValue.search(/\w/)< 0){
                    $("#error_phone").html('Mobile number cannot be empty.'); 
                    flag = true;  
                } else if($("#userphone").val().length!=10){
                    $("#error_phone").html('Please enter valid phone number.');
                    flag = true;
                } else {
                    $("#error_phone").html('');
                }
                if(passwordValue ==="" || passwordValue.search(/\w/)< 0){
                    $("#error_pwd").html('Password cannot be empty.');
                    flag = true;   
                } else if(password_len < pwdLenght){
                    $("#error_pwd").html('Length is short, minimum 6 characters required.');
                    flag = true; 
                } else {
                    $("#error_pwd").html('');
                }

                if(flag){
                    return false;
                }
            }

            function validateLogin(){
                var flag = false;
                var userEmailValue = $("#email").val();
                var passwordValue = $("#pwd").val();
                var login_password_len = $("#pwd").val().length;
                var loginpwdLenght = 6;
                var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
                if(userEmailValue ===""){
                    $("#login_error_email").html('Email Id cannot be empty.');  
                    flag = true; 
                } else if(!emailReg.test(userEmailValue)) {
                    $("#login_error_email").html('Invalid email address.');
                    flag = true;
                } else {
                    $("#login_error_email").html('');
                }
                
                if(passwordValue ===""){
                    $("#login_error_pwd").html('Password cannot be empty.');
                    flag = true;   
                } else if(login_password_len < loginpwdLenght){
                    $("#login_error_pwd").html('Length is short, minimum 6 characters required.');
                    flag = true; 
                } else {
                    $("#login_error_pwd").html('');
                }

                if(flag){
                    return false;
                }
            }

            function isNumberKey(evt){
                var charCode = (evt.which) ? evt.which : evt.keyCode
                if (charCode > 31 && (charCode < 48 || charCode > 57))
                    return false;
                return true;
            }

