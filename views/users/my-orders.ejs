		<!-- /.breadcrumb -->

		<div class="body-content">
            <div class="container">
                <div class="row checkout-box faq-page">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body pb-0">
                                <div class="row align-items-center">
                                    <div class="col-md-3">
                                        <div class="text-center border-end">
                                            <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="img-fluid avatar-xxl rounded-circle" alt="">
                                            <h4 class="text-primary font-size-20 mt-3 mb-2"><%= user.name %></h4>
                                        </div>
                                    </div><!-- end col -->
                                    <div class="col-md-9">
                                        <div class="ms-3">
                                            <div class="row my-4" style="margin-top: 20px;">
                                                <div class="col-md-12">
                                                    <div>
                                                        <p class="text-muted mb-2 fw-medium"><i class="mdi mdi-email-outline me-2"></i><%= user.email %>
                                                        </p>
                                                        <p class="text-muted fw-medium mb-0"><i class="mdi mdi-phone-in-talk-outline me-2"></i><%= user.mobile %>
                                                        </p>
                                                    </div>
                                                </div><!-- end col -->
                                            </div><!-- end row -->
                                            <ul class="nav nav-tabs nav-tabs-custom border-bottom-0 mt-3 nav-justfied" role="tablist">
                                                <li class="nav-item active" role="presentation">
                                                    <a class="nav-link px-4 " data-toggle="tab" href="#my-orders" role="tab" aria-selected="false" tabindex="-1">
                                                        <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                                        <span class="d-none d-sm-block">My Orders</span>
                                                    </a>
                                                </li><!-- end li -->
                                                <li class="nav-item" role="presentation">
                                                    <a class="nav-link px-4" href="/profile">
                                                        <span class="d-block d-sm-none"><i class="mdi mdi-menu-open"></i></span>
                                                        <span class="d-none d-sm-block">Billing Details</span>
                                                    </a>
                                                </li><!-- end li -->
                                                <li class="nav-item" role="presentation">
                                                    <a class="nav-link px-4 " href="/change-password">
                                                        <span class="d-block d-sm-none"><i class="mdi mdi-account-group-outline"></i></span>
                                                        <span class="d-none d-sm-block">Change Password</span>
                                                    </a>
                                                </li><!-- end li -->
                                            </ul><!-- end ul -->
                                        </div>
                                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div><!-- end card body -->
                        </div><!-- end card -->
                        <div class="tab-content p-4">
                            <div class="tab-pane active" id="my-orders" role="tabpanel">
                                <h4 class="card-title mb-4">My Orders</h4>
                                <div class="row">
                                    <div class="col-xl-12">
                                        <table class="table table-responsive table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Order Placed</th>
                                                    <th>Total</th>
                                                    <th>Ship to</th>
                                                    <th>Order#</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (getorder.length > 0) {%>
                                                    <% getorder.forEach((list, index) => { %>
                                                        <tr>
                                                            <td><%= moment(list.created_at).add(5, 'hours').add(30, 'minutes').format('DD MMM,YYYY hh:mm A') %></td>
                                                            <td><span class="currencyINRFallback">â‚¹</span><%= list.paid_amount %></td>
                                                            <td><%= list.fullname %></td>
                                                            <td>
                                                                <a class="text-primary" href="/user/vieworder/<%= list.reference %>">
					                                                <%= list.reference %>
				                                                </a>
                                                            </td>
                                                        </tr>
                                                    <% }); %>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div><!-- end tab pane -->
