<!--<html lang="en">-->

<%- include header %>
<%- include ../common/leftsidebar %>
<!-- Main component for a primary marketing message or call to action -->

<div id="page-content-wrapper">
    <div id="page-content" style="min-height: 1077px;">

        <div class="container">

            <div id="page-title">
                <h2>Country

                    <a href="#" class="btn btn-block btn-primary" data-target="#myModal" data-toggle="modal"
                       style="width:auto;float:right;">Add Country</a>
                </h2>

            </div>

            <div class="panel">
                <div class="panel-body">


                    <div class="example-box-wrapper">
                        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered"
                               id="datatable-example">
                            <thead>
                            <tr>
                                <th>COUNTRY</th>
                                <th>CODE</th>
                                <th>ISD CODE</th>
                                <th>CURRENCY</th>
                                <th>STATUS</th>
                                <th>ACTION</th>

                            </tr>
                            </thead>
                            <tbody>
                            <% for(var i=0; i < countrylist.length; i++){ %>

                            <tr class="gradeX">
                                <td><%= countrylist[i].name %></td>
                                <td><%= countrylist[i].code %></td>
                                <td><%= countrylist[i].isd_code %></td>
                                <td><%= countrylist[i].currency %></td>
                                <td><% if(countrylist[i].status==1){ %>Active<% } else{ %>Inactive<% } %></td>
                                <td>
                                    <a class="editcountry" id="<%= countrylist[i].id %>" data-target="#myModaledit" data-toggle="modal"><i
                                                class="glyph-icon icon-pencil"
                                                style="padding-left: 33px;"></i></a>
                                    <a
                                       class="del_country delete" id="<%= countrylist[i].id %>"><i class="glyph-icon icon-trash"
                                                         style="padding-left: 33px;"></i></a>
                                </td>
                            </tr>
                            <% }%>
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade"
     id="myModal"
     tabindex="-1"
     role="dialog"
     aria-hidden="true">
    <div
            class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add Contry</h4>
            </div>
            <!--end modal-header-->
            <form action="/addcountry" method="post">
                <div class="modal-body">
                    <div class="example-box-wrapper">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="control-label label-margin">Country</label>

                                <input type="text" class="form-control" id="" placeholder="Country" name="Country" required>

                            </div>

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Code</label>

                                <input type="text" class="form-control" id="" placeholder="Country Code" name="CountryCode" required>

                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="control-label label-margin">ISD Code</label>

                                <input type="text" class="form-control" id="" placeholder="ISD Code"  name="ISDCode" required>

                            </div>

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Currency</label>

                                <input type="text" class="form-control" id="" placeholder="Currency" name="Currency" required>

                            </div>

                        </div>

                        <div class="form-group">


                            <div class="col-sm-6">
                                <label class="control-label label-margin">Status</label>

                                <select class="form-control" name="Status" required>
                                    <option value="1">Active</option>
                                    <option value="0">Inactive</option>

                                </select>

                            </div>

                        </div>



                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>

<div class="modal fade"
     id="myModaledit"
     tabindex="-1"
     role="dialog"
     aria-hidden="true">
    <div
            class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit Contry</h4>
            </div>
            <!--end modal-header-->
            <form action="/updatecountry" method="post">
                <input type="hidden" id="edit_country_id" name="edit_country_id" value="">
                <div class="modal-body">
                    <div class="example-box-wrapper">
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="control-label label-margin">Country</label>

                                <input type="text" class="form-control" id="Country_edit" placeholder="Country" name="Country_edit" required>

                            </div>

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Code</label>

                                <input type="text" class="form-control" id="edit_code" placeholder="Country Code" name="edit_code" required>

                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="control-label label-margin">ISD Code</label>

                                <input type="text" class="form-control" id="edit_isd_code" placeholder="ISD Code"  name="edit_isd_code" required>

                            </div>

                            <div class="col-sm-6">
                                <label class="control-label label-margin">Currency</label>

                                <input type="text" class="form-control" id="edit_currency" placeholder="Currency" name="edit_currency" required>

                            </div>

                        </div>

                        <div class="form-group">


                            <div class="col-sm-6">
                                <label class="control-label label-margin">Status</label>

                                <select class="form-control" name="edit_status" id="edit_status"required>
                                    <option value="1">Active</option>
                                    <option value="0">Inactive</option>

                                </select>

                            </div>

                        </div>



                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>
<%- include footer %>
</body>
</html>